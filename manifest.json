{
 "manifest_version": 2,
 "name": "Slackline",
 "description": "Inline custom emoji support for facebook messenger.",
 "version": "1",
 "author": "Anubhav Srivastava",
 "background": {
  "scripts":["background.js"]
 },
 "content_scripts": [
    {
      "matches": ["https://www.messenger.com/*", "https://www.facebook.com/*"],
      "css": ["style.css"],
      "js": ["myscript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs"
  ],
  "options_page": "options.html"
}